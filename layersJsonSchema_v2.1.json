{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "layers": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/wms" },
          { "$ref": "#/definitions/bingAerial" },
          { "$ref": "#/definitions/osm" }
        ]
      }
    },
    "contexts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "infoFile": {
            "type": "string"
          },
          "labels": { "$ref": "#/definitions/labels" },
          "inlineLegendUrl": {
            "type": "string"
          },
          "downloadUrl": {
            "type": "string"
          },
          "layers": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "active": {
            "type": "boolean"
          }
        },
        "required": [
          "id"
        ],
        "additionalProperties": false
      }
    },
    "group": {
      "type": "object",
      "properties": {
        "items": { "$ref": "#/definitions/items" },
        "exclusive": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "layers",
    "contexts",
    "group"
  ],
  "definitions": {
    "labels": {
      "type": "array",
      "items": {
        "properties": {
          "language": {
            "type": "string"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["language", "label"],
        "additionalProperties": false
      }
    },
    "wms": {
      "type": "object",
      "properties": {
        "type": { "enum": ["wms"] },
        "id": {
          "type": "number"
        },
        "serverUrls": {
          "type": "array",
          "items": {
            "type": "string"
          }
      },
        "name": {
          "type": "string"
        },
        "imageFormat": {
          "type": "string"
        },
        "legend": {
          "type": "object",
          "oneOf": [
            { "$ref": "#/definitions/wmsLegend" },
            { "$ref": "#/definitions/urlLegend" }
          ]
        },
        "sourceLink": {
          "type": "string"
        },
        "sourceLabel": {
          "type": "string"
        },
        "times": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^([0-9]{4})(-([0-9]{2})(-([0-9]{2})(T([0-9]{2}):([0-9]{2})(:([0-9]{2})(\\.([0-9]+))?)?(Z|(([-+])([0-9]{2}):([0-9]{2})))?)?)?)?$"
          }
        },
        "styles": { "$ref": "#/definitions/labels" },
        "visible": {
          "type": "boolean"
        },
        "statistics": {
          "type": "array",
          "items": {
            "oneOf": [
              { "$ref": "#/definitions/attributesStatistics" },
              { "$ref": "#/definitions/urlStatistics" }
            ]
          }
        }
      },
      "required": ["id", "name", "serverUrls"],
      "additionalProperties": false
    },
    "bingAerial": {
      "type": "object",
      "properties": {
        "type": { "enum": ["bing-aerial"] },
        "id": {
          "type": "number"
        },
        "visible": {
          "type": "boolean"
        }
      },
      "required": ["type", "id"],
      "additionalProperties": false
    },
    "osm": {
      "type": "object",
      "properties": {
        "type": { "enum": ["osm"] },
        "id": {
          "type": "number"
        },
        "visible": {
          "type": "boolean"
        }
      },
      "required": ["type", "id"],
      "additionalProperties": false
    },
    "esri": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "esri"
          ]
        },
        "id": {
          "type": "number"
        },
        "visible": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "id"
      ],
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          { "$ref": "#/definitions/group" },
          { "$ref": "#/definitions/context" }
        ]
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "context": {
          "type": "number"
        }
      },
      "required": ["context"],
      "additionalProperties": false
    },
    "group": {
      "type": "object",
      "properties": {
        "group": {
          "type": "object",
          "properties": {
            "labels": { "$ref": "#/definitions/labels" },
            "infoFile": { "type": "string" },
            "exclusive": { "type": "boolean" },
            "items": { "$ref": "#/definitions/items" }
          },
          "required": ["labels"],
          "additionalProperties": false
        }
      },
      "required": ["group"],
      "additionalProperties": false
    },
    "attributesStatistics": {
      "type": "object",
      "properties": {
        "type": { "enum": ["attributes"] },
        "labels": { "$ref": "#/definitions/labels" },
        "attributes": {
          "type": "array",
          "items": {
            "properties": {
              "labels": { "$ref": "#/definitions/labels" },
              "attribute": {
                "type": "string"
              }
            },
            "required": ["labels", "attribute"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false,
      "required": ["type"]
    },
    "urlStatistics": {
      "type": "object",
      "properties": {
        "type": { "enum": ["url"] },
        "labels": { "$ref": "#/definitions/labels" },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["type", "url"]
    },
    "wmsLegend": {
      "properties": {
        "type": { "enum": ["wms"] },
        "style": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["type", "style"]
    },
    "urlLegend": {
      "properties": {
        "type": { "enum": ["url"] },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["type", "url"]
    }
  }
}
